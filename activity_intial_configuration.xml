<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_image_height"
            android:background="#8ae4fb"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_settings_title" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ActionBarThemeOverlay"
            app:popupTheme="@style/ActionBarPopupThemeOverlay"
            app:titleTextAppearance="@style/ActionBar.TitleText" />

        <LinearLayout
            android:id="@+id/location_services_container"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorNordicOrange"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="@string/location_services_disabled"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/enable_location_services"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="@string/enable"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nfc_container"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="@string/nfc_disabled"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/enable_nfc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="@string/enable"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/dismiss_nfc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:text="@string/more"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="ScrollViewCount">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/setup_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="240dp"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/step_one"
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="@dimen/stepper_circle_height"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_blue_bg"
                            android:gravity="center"
                            android:text="@string/step_one"
                            android:textColor="@color/textColorWhite" />

                        <TextView
                            android:id="@+id/step_one_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/step_one"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/step_one"
                            android:text="@string/connect_to_thingy"
                            android:textAppearance="@style/StepperTitleTextStyle" />

                        <TextView
                            android:id="@+id/step_one_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/step_one_title"
                            android:layout_marginLeft="36dp"
                            android:gravity="top"
                            android:text="@string/connect_thingy_summary"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/greyBg" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/stepper_padding_left"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/stepper_padding_top">

                            <LinearLayout
                                android:id="@+id/thingy_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/confirm_thingy"
                                    style="@style/Base.Widget.AppCompat.Button.Colored"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:text="@string/scan_thingy" />
                            </LinearLayout>

                            <android.support.v4.widget.Space
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/stepper_padding_top">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/step_two"
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="@dimen/stepper_circle_height"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_blue_bg"
                            android:gravity="center"
                            android:text="@string/step_two"
                            android:textColor="@color/textColorWhite" />

                        <TextView
                            android:id="@+id/step_two_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/step_two"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/step_two"
                            android:text="@string/dev_name_info"
                            android:textAppearance="@style/StepperTitleTextStyle" />

                        <TextView
                            android:id="@+id/step_two_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/step_two_title"
                            android:layout_marginLeft="36dp"
                            android:gravity="top"
                            android:text="@string/dev_name_info_summary"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/vertical_line"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/greyBg" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/stepper_padding_left"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/stepper_padding_top">

                            <LinearLayout
                                android:id="@+id/device_name_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/device_name_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/device_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/device_name_hint"
                                        android:inputType="textPersonName"
                                        android:maxLength="10" />
                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/confirm_device_name"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/confirm" />

                                    <Button
                                        android:id="@+id/skip_device_name"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/skip" />
                                </LinearLayout>
                            </LinearLayout>

                            <android.support.v4.widget.Space
                                android:id="@+id/space"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/step_three"
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="@dimen/stepper_circle_height"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_blue_bg"
                            android:gravity="center"
                            android:text="@string/step_three"
                            android:textColor="@color/textColorWhite" />

                        <TextView
                            android:id="@+id/step_three_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/step_three"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/step_three"
                            android:text="User name"
                            android:textAppearance="@style/StepperTitleTextStyle" />

                        <TextView
                            android:id="@+id/step_three_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/step_three_title"
                            android:layout_marginLeft="36dp"
                            android:gravity="top"
                            android:text="User name"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="23dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/vertical_line2"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/greyBg" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/stepper_padding_left"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/stepper_padding_top">

                            <LinearLayout
                                android:id="@+id/device_user_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/device_user_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/user_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/device_name_hint"
                                        android:inputType="textPersonName"
                                        android:maxLength="10" />
                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/confirm_user_name"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/confirm" />

                                    <Button
                                        android:id="@+id/skip_user_name"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/skip" />
                                </LinearLayout>
                            </LinearLayout>

                            <android.support.v4.widget.Space
                                android:id="@+id/space2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/step_four"
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="@dimen/stepper_circle_height"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_blue_bg"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/textColorWhite" />

                        <TextView
                            android:id="@+id/step_four_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/step_four"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/step_four"
                            android:text="User age"
                            android:textAppearance="@style/StepperTitleTextStyle" />

                        <TextView
                            android:id="@+id/step_four_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/step_four_title"
                            android:layout_marginLeft="36dp"
                            android:gravity="top"
                            android:text="User age"
                            android:textSize="12sp"
                            tools:ignore="DuplicateIds" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/vertical_line3"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/greyBg" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/stepper_padding_left"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/stepper_padding_top">

                            <LinearLayout
                                android:id="@+id/user_age_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/user_age_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/age"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/device_name_hint"
                                        android:inputType="textPersonName"
                                        android:maxLength="10" />
                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/confirm_age"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/confirm" />

                                    <Button
                                        android:id="@+id/skip_age"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/skip" />
                                </LinearLayout>
                            </LinearLayout>

                            <android.support.v4.widget.Space
                                android:id="@+id/space3"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/step_five"
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="@dimen/stepper_circle_height"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_blue_bg"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/textColorWhite" />

                        <TextView
                            android:id="@+id/step_five_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/step_five"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/step_five"
                            android:text="User gender"
                            android:textAppearance="@style/StepperTitleTextStyle" />

                        <TextView
                            android:id="@+id/step_five_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/step_five_title"
                            android:layout_marginLeft="36dp"
                            android:gravity="top"
                            android:text="User gender"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/vertical_line4"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/greyBg" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/stepper_padding_left"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/stepper_padding_top">

                            <LinearLayout
                                android:id="@+id/user_gender_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/gender_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/gender"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/device_name_hint"
                                        android:inputType="textPersonName"
                                        android:maxLength="10" />
                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/confirm_gender"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/confirm" />

                                    <Button
                                        android:id="@+id/skip_gender"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/skip" />
                                </LinearLayout>
                            </LinearLayout>

                            <android.support.v4.widget.Space
                                android:id="@+id/space4"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/step_six"
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="@dimen/stepper_circle_height"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_blue_bg"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/textColorWhite" />

                        <TextView
                            android:id="@+id/step_six_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/step_six"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/step_six"
                            android:text="Place name"
                            android:textAppearance="@style/StepperTitleTextStyle" />

                        <TextView
                            android:id="@+id/step_six_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/step_six_title"
                            android:layout_marginLeft="36dp"
                            android:gravity="top"
                            android:text="The place where you do"
                            android:textSize="12sp"
                            tools:ignore="DuplicateIds" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/vertical_line5"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/greyBg" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/stepper_padding_left"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/stepper_padding_top">

                            <LinearLayout
                                android:id="@+id/place_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/place_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/place"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/device_name_hint"
                                        android:inputType="textPersonName"
                                        android:maxLength="10" />
                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/confirm_place_name"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/confirm" />

                                    <Button
                                        android:id="@+id/skip_place_name"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/skip" />
                                </LinearLayout>
                            </LinearLayout>

                            <android.support.v4.widget.Space
                                android:id="@+id/space5"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/step_seven"
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="@dimen/stepper_circle_height"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/ic_blue_bg"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@color/textColorWhite" />

                        <TextView
                            android:id="@+id/step_seven_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/step_seven"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/step_seven"
                            android:text="User height"
                            android:textAppearance="@style/StepperTitleTextStyle" />

                        <TextView
                            android:id="@+id/step_seven_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/step_seven_title"
                            android:layout_marginLeft="36dp"
                            android:gravity="top"
                            android:text="User height"
                            android:textSize="12sp"
                            tools:ignore="DuplicateIds" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/stepper_circle_width"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/vertical_line6"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/greyBg" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/stepper_padding_left"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/stepper_padding_top">

                            <LinearLayout
                                android:id="@+id/gender_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/height_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/height"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/device_name_hint"
                                        android:inputType="textPersonName"
                                        android:maxLength="10" />
                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/confirm_height"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/confirm" />

                                    <Button
                                        android:id="@+id/skip_height"
                                        style="@style/Widget.AppCompat.Button.Colored"
                                        android:layout_width="wrap_content"
                                        android:layout_height="48dp"
                                        android:text="@string/skip" />
                                </LinearLayout>
                            </LinearLayout>

                            <android.support.v4.widget.Space
                                android:id="@+id/space6"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setup_complete_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_bottom_setup_complete_container"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/initial_setup_complete" />

                        <Button
                            android:id="@+id/get_started"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_setup_complete_button"
                            android:text="@string/get_started" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_bottom_bg_title"
        android:scaleType="center"
        android:src="@drawable/background_title" />
</RelativeLayout>
